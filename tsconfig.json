{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "baseUrl": ".",
    "declaration": true,
    "emitDeclarationOnly": true,
    "importsNotUsedAsValues": "remove",
    "lib": ["esnext", "dom"],
    "noImplicitAny": true,
    "outDir": "./lib",
    "target": "esnext",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "lib"],
  "extends": "@tsconfig/strictest/tsconfig.json",
  "include": ["src", "test", "esbuild.build.mjs"]
}
